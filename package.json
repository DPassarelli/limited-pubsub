    "async",
    "message",
    "publish",
    "subscribe"
  ],
  "author": "David Passarelli <dpassarelli@camelotcg.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DPassarelli/topico/issues"
  },
  "homepage": "https://github.com/DPassarelli/topico#readme",
  "mocha": {
    "reporter": "min",
    "file": "test/setup.js",
    "ui": "bdd"
  },
  "standard": {
    "global": [
